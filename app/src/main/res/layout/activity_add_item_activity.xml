<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".add_item_activity">


    <EditText
            android:layout_width="270dp"
            android:layout_height="50dp"
            android:inputType="text"
            android:hint="Chit Name"
            android:ems="10"
            android:id="@+id/editTextChitName" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/btnMembers"
            android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.444"
            app:layout_constraintVertical_bias="0.0"/>

    <EditText
            android:layout_width="270dp"
            android:layout_height="50dp"
            android:inputType="numberDecimal"
            android:hint="Total Chit Amount"
            android:ems="10"
            android:id="@+id/editTextTotalChitAmount" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/btnMembers"
            android:layout_marginTop="8dp"
            app:layout_constraintHorizontal_bias="0.448"
            app:layout_constraintVertical_bias="0.033" app:layout_constraintTop_toBottomOf="@+id/editTextChitName"/>
    <EditText
            android:layout_width="270dp"
            android:layout_height="50dp"
            android:inputType="numberDecimal"
            android:hint="Monthly Payment"
            android:ems="10"
            android:id="@+id/editTextMonthlyPayment" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/btnMembers"
            android:layout_marginTop="16dp"
            app:layout_constraintHorizontal_bias="0.450"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintTop_toBottomOf="@+id/editTextTotalChitAmount"/>
    <EditText
            android:layout_width="270dp"
            android:layout_height="50dp"
            android:inputType="number"
            android:hint="No.of Months"
            android:ems="10"
            android:id="@+id/editTextMonths" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/editTextMonthlyPayment" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/btnMembers"
            app:layout_constraintHorizontal_bias="0.450"
            app:layout_constraintVertical_bias="0.0"/>
    <EditText
            android:layout_width="270dp"
            android:layout_height="50dp"
            android:inputType="number"
            android:hint="Total Members"
            android:ems="10"
            android:id="@+id/editText6" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/editTextMonths" android:layout_marginBottom="8dp"
            app:layout_constraintHorizontal_bias="0.450"
            app:layout_constraintVertical_bias="0.0" app:layout_constraintBottom_toBottomOf="parent"/>
    <Button
            android:text="Save Details"
            android:layout_width="330dp"
            android:layout_height="70dp"
            android:id="@+id/btnMembers" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.700" app:layout_constraintTop_toTopOf="parent"/>
    <Button
            android:text="Add Members"
            android:layout_width="330dp"
            android:layout_height="70dp"
            android:id="@+id/button2" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btnMembers" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.100"/>

</androidx.constraintlayout.widget.ConstraintLayout>